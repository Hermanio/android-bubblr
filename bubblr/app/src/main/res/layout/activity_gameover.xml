<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/rLayout"
    android:background="#ffff4146">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="got rekt"
        android:id="@+id/gameOverText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="60dp"
        android:textStyle="bold"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Score:"
        android:id="@+id/scoreText"
        android:layout_below="@+id/gameOverText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:textSize="32dp"
        android:textColor="#ff000000"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lives left:"
        android:id="@+id/livesLeft"
        android:textSize="32dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scoreText"
        android:textColor="#ff000000"
        android:layout_margin="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retry"
        android:id="@+id/retryButton"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share result"
        android:id="@+id/shareButton"
        android:layout_below="@+id/retryButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:background="#ffffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main menu"
        android:id="@+id/mainMenuButton"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/shareButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#ffffffff"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" />
</RelativeLayout>